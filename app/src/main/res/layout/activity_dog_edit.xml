<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_dog_avatar"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="64dp"
        android:layout_height="64dp"/>
    <EditText
        android:id="@+id/et_dog_name"
        app:layout_constraintStart_toStartOf="@id/iv_dog_avatar"
        app:layout_constraintEnd_toEndOf="@id/iv_dog_avatar"
        app:layout_constraintTop_toBottomOf="@id/iv_dog_avatar"
        android:textSize="@dimen/text_h2"
        android:textColor="@color/oh_text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/et_dog_date"
        app:layout_constraintStart_toStartOf="@id/iv_dog_avatar"
        app:layout_constraintEnd_toEndOf="@id/iv_dog_avatar"
        app:layout_constraintTop_toBottomOf="@id/et_dog_name"
        android:textSize="@dimen/text_b3"
        android:textColor="@color/oh_text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>